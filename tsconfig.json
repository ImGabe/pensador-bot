{
    "compilerOptions": {
      "target": "ES2017",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node",
      "outDir": "dist"
    },       
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }